@model BlogWeb.Models.Post
<html>
<head>
    <title>Novo Post</title>
</head>
<body>
    <form action="/Post/Adiciona" method="post">
        <label>
            Titulo : <input name="Titulo" maxlength="50" required value="@Model.Titulo" />
        </label>
        @Html.ValidationMessage("Titulo")
        <label>
            Resumo : <input name="Resumo" required value="@Model.Resumo" />
        </label>
        @Html.ValidationMessage("Resumo")
        <label>
            Categoria : <input name="Categoria" value="@Model.Categoria" />
        </label>
        <button type="submit">Submeter</button>
    </form>
    <script src="~/js/jquery-1.10.2.js"></script>
    <script src="~/js/jquery.validate.js"></script>
    <script>
        $("form").validate();
    </script>
</body>
</html>
