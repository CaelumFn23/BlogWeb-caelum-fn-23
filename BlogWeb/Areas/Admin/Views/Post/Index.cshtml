@model IEnumerable<BlogWeb.Models.Post>

@Html.ActionLink("Incluir	Post", "Novo", null, null, new { @class = "btn	btn-primary" })

<table class="table	table-striped	table-hover	table-bordered">
    <caption>Lista	dos	posts	cadastrados	no	blog.</caption>
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Resumo</th>
            <th>Categoria</th>
            <th>Publicado</th>|
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Titulo, "Visualiza", new { id = item.Id })
                    @*<a href="/Post/Visualiza/@item.Id"></a>*@
                </td>
                <td>@item.Resumo</td>
                <td>@item.Categoria</td>
                @if (item.Publicado)
                {
                    <td>@string.Format("{0:dd/MM/yyyy}", item.DataPublicacao)</td>
                }
                else
                {
                    <td>Não</td>
                }
                <td>
                    @Html.ActionLink("Remover", "Remover", new { id = item.Id })
                </td>
                @if (!item.Publicado)
                {
                    <td>
                        @Html.ActionLink("Publicar", "Publicar", new { id = item.Id })
                    </td>
                }
                else
                {
                    <td>
                        @Html.ActionLink("Retirar Publicacao", "RetirarPublicacao", new { id = item.Id })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
